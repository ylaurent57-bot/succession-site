---
import { siteConfig, defaultMeta, globalKeywords, type SEOProps } from '@data/seo-config';
import { generateMetaTags } from '@utils/seo';

interface Props extends SEOProps {}

const props = Astro.props;
const meta = generateMetaTags(props);
---

<!-- Primary Meta Tags -->
<title>{meta.title}</title>
<meta name="title" content={meta.title} />
<meta name="description" content={meta.description} />
<meta name="author" content={meta.author} />
<meta name="keywords" content={globalKeywords} />

<!-- Robots -->
{meta.noindex ? (
  <meta name="robots" content="noindex, nofollow" />
) : (
  <>
    <meta name="robots" content={defaultMeta.robots} />
    <meta name="googlebot" content={defaultMeta.googlebot} />
  </>
)}

<!-- Canonical -->
{meta.canonical && <link rel="canonical" href={meta.canonical} />}

<!-- Language -->
<meta property="og:locale" content={siteConfig.locale} />
<link rel="alternate" hreflang="fr" href={meta.canonical || siteConfig.url} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={meta.ogType} />
<meta property="og:url" content={meta.canonical || siteConfig.url} />
<meta property="og:title" content={meta.title} />
<meta property="og:description" content={meta.description} />
<meta property="og:image" content={meta.ogImage} />
<meta property="og:site_name" content={siteConfig.name} />

<!-- Article specific OG tags -->
{meta.ogType === 'article' && meta.publishedTime && (
  <meta property="article:published_time" content={meta.publishedTime} />
)}
{meta.ogType === 'article' && meta.modifiedTime && (
  <meta property="article:modified_time" content={meta.modifiedTime} />
)}
{meta.ogType === 'article' && meta.author && (
  <meta property="article:author" content={meta.author} />
)}
{meta.ogType === 'article' && meta.section && (
  <meta property="article:section" content={meta.section} />
)}
{meta.ogType === 'article' && meta.tags && meta.tags.map((tag) => (
  <meta property="article:tag" content={tag} />
))}

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={meta.canonical || siteConfig.url} />
<meta property="twitter:title" content={meta.title} />
<meta property="twitter:description" content={meta.description} />
<meta property="twitter:image" content={meta.ogImage} />
{siteConfig.twitterHandle && (
  <meta property="twitter:site" content={siteConfig.twitterHandle} />
)}
